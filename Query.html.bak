	<!-- query form area -->
	<div class="query-box" id="query-box">
		<form class="form" name="form" onsubmit="return false">
			<label class="txt label" id="type-label">Ask Us!<p> what do you need</p>  </label><br>

			<input type="text" id="name" class="inputs txt" name="name" placeholder="Your Name">
			<input type="email" id="email" class="inputs txt" name="email" placeholder="Your Email">


		<div class="radios">
			<label class="subject-label"><b>Arrangements needed</b> </label>
			<input type="radio" class="radio" name="subject" id="emergency" value="Emergency">
			<label for="emergency" class="labels">Emergency</label>
			<input type="radio" class="radio" name="subject" id="travel" value="Travel">
			<label for="travel" class="labels">Travel</label>
			<input type="radio" class="radio" name="subject" id="safari" value="Safari">
			<label for="safari" class="labels">Safari</label>
		</div>
			<textarea class="inputs txt question-area" name="query" placeholder="Your Question"></textarea>

			<a href="" class="btn viewQuery" onclick="return verify()">
				
				<span class="btn-text query-btns">View Query</span>
			</a>
		</form>
	</div>
	
	
	<!-- details form area -->
	<div class="details-box details-text" id="details-box">
		<form class="filled_form" name="filled_form" action="mailto:tharusha.20210632@iit.ac.lk" method="get">
			<h3 class="detail_box_header">Entered Details</h3>
			<div class="border">
				<label class="details-labels"><b>Name : </b></label> <label id="inputName"></label> <br>
				<label class="details-labels"><b>Email : </b></label> <label id="inputEmail"></label><br>
				
				<label class="details-labels"><b>Arrangements needed : </b></label> <label id="inputSubject"></label><br>
				<label class="details-labels"><b>Query Detail : </b></label> <label id="inputQuery"></label>
			</div>

			<button class="btn btn_duo send_btn" type="submit">
				<span class="btn-icon"><ion-icon name="send-outline"></ion-icon></span>
				<span class="btn-text query-btns">Send</span>
			</button>
					
			<button class="btn btn_duo edit_btn" onclick="return edit()">
